                "description": "JustWorks pairing (default): Pairing is automatic once the pairing is initiated.",
                "config": {
                    "microbit-dal": {
                        "bluetooth": {
                            "open": null,
                            "pairing_mode": null,
                            "whitelist": null,
                            "security_level": null
                        }
                    }
                }
            },
            {
                "description": "Passkey pairing: Pairing requires 6 digit key to pair.",
                "config": {
                    "microbit-dal": {
                        "bluetooth": {
                            "open": 0,
                            "pairing_mode": 1,
                            "whitelist": 1,
